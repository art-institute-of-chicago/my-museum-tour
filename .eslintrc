{
  "root": true,
  "env": { "browser": true, "es2020": true, "cypress/globals": true },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": ["dist", ".eslintrc", "vite.config.js"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["cypress", "react", "react-hooks"],
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "rules": {
    "react/jsx-uses-react": 1
  }
}
